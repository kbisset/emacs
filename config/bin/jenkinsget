#!/bin/sh
if [ "$1" = "--url" ]; then
    URL=$2
    UNZIP=0
elif [ "X$1" != "X" ]; then
    URL=http://jenkins-tinc.ubercam.net:8080/job/jarvis/job/master/$1/artifact/build/jarvis2/dist/jarvis-master-$1-$2.txz
    UNZIP=0
else
    URL=http://jenkins-tinc.ubercam.net:8080/job/jarvis/job/master/lastSuccessfulBuild/artifact/\*zip\*/archive.zip
    UNZIP=1
fi

wget --auth-no-challenge --http-user=keith --http-password=495a55e89b0fec70cad0b436b833a917 $URL
if [ $UNZIP -eq 1 ]; then
    unzip archive.zip
    mv archive/build/jarvis2/dist/*.txz .
    rm -rf archive archive.zip
fi
